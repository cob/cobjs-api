{
  "$schema": "./node_modules/@openapitools/openapi-generator-cli/config.schema.json",
  "spaces": 2,
  "generator-cli": {
    "version": "7.0.0",
    "generators": {
      "v1.0": {
        "templateDir": "./cob-templates/typescript-axios",
        "ignoreFileOverride": "#{cwd}/.openapi-generator-ignore",
        "generatorName": "typescript-axios",
        "output": "#{cwd}/packages/#{name}/src/",
        "glob": "./openapi/*.{json,yaml}",
        "typeMappings": {
          "object": "any"
        },
        "additionalProperties": {
          "supportsES6": true,
          "enumPropertyNaming": "UPPERCASE",
          "withSeparateModelsAndApi": true,
          "apiPackage": "api",
          "modelPackage": "schema"
        }
      }
    }
  }
}
